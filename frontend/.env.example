# Zino - Environment Variables Example
# Copy this file to .env.local and fill in your values

# ======================
# API Configuration
# ======================
VITE_API_URL=http://localhost:4876
VITE_API_TIMEOUT=30000

# ======================
# Frontend Configuration
# ======================
# Set to 'true' when deploying frontend to same server as backend under /zino path
# Set to 'false' when deploying frontend separately
VITE_USE_SUBPATH=false

# ======================
# Authentication
# ======================
# Environment: 'development' | 'production'
VITE_APP_ENV=development

# Google OAuth (for production)
VITE_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
VITE_GOOGLE_REDIRECT_URI=http://localhost:5173/auth/callback

# Session configuration
VITE_SESSION_TIMEOUT=3600000
# Skip auth in development (true/false)
VITE_SKIP_AUTH=true

# ======================
# Feature Flags
# ======================
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG=false
VITE_MAX_UPLOAD_SIZE=10485760
# Max upload size in bytes (default: 10MB)

# ======================
# PDF Generation
# ======================
# PDF scale factor for html2canvas (higher = better quality but larger files)
# Default: 4 (good balance)
# Lower values (2-3): Smaller files, lower quality
# Higher values (5-6): Larger files, higher quality
VITE_PDF_SCALE_FACTOR=2

# ======================
# App Configuration
# ======================
VITE_APP_NAME=Zino
VITE_APP_VERSION=1.0.0
VITE_APP_URL=http://localhost:5173
