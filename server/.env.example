# Zino Backend - Environment Variables Example
# Copy this file to .env and fill in your values

# ======================
# Server Configuration
# ======================
NODE_ENV=development
PORT=4876

# CORS - Comma-separated list of allowed origins
# Development: http://localhost:5173
# Production: https://your-frontend.railway.app
CORS_ORIGIN=http://localhost:5173

# ======================
# Storage Configuration
# ======================
# Storage provider: 'filesystem' or 's3'
STORAGE_PROVIDER=filesystem

# Filesystem storage (default)
UPLOAD_DIR=./data/uploads

# Image upload limits
MAX_IMAGE_SIZE=50  # Max image size in MB (default: 50MB)
MAX_FILE_SIZE=10485760  # Legacy: Max file size in bytes

# AWS S3 Configuration (only if STORAGE_PROVIDER=s3)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1
# S3_BUCKET=your-bucket-name
# S3_CDN_URL=https://cdn.yourdomain.com

# ======================
# Authentication
# ======================
# Skip auth in development
SKIP_AUTH=true

# Google OAuth
# Get credentials from: https://console.cloud.google.com
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
# Redirect URI should match what you configured in Google Console
# Example: http://localhost:5173/auth/callback (dev) or https://yourdomain.com/auth/callback (prod)
GOOGLE_REDIRECT_URI=

# JWT Configuration
JWT_SECRET=dev-secret-change-in-production
JWT_EXPIRY=24h

# ======================
# API Configuration
# ======================
JSON_BODY_LIMIT=150mb
BASE_URL=http://localhost:4876

# ======================
# Database
# ======================
# PostgreSQL connection string
# Local: postgresql://user:password@localhost:5432/zino
# Railway/Heroku: Set automatically by platform
DATABASE_URL=

# Enable query logging for debugging
LOG_QUERIES=false
